{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"*.ts",
		"*.js",
		"*.cjs"
	],
	"exclude": [
		"node_modules"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs",
			"useDefineForClassFields": false,
			"noImplicitOverride": true
		}
	}
}
